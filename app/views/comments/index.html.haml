.container.comment-container#comment-index{data: { post_id: @post.id}}
  %ul
    - @comment.errors.full_messages.each do |message|
      %li= message
  .comment-nav
    =link_to image_tag('back-btn.png'), root_path, class: 'back-btn'
    %p Comment
  .comments-container

  = form_with(model: @comment, url: post_comments_path(@comment.post), local: true) do |f|
    .textarea-wrapper
      .image-overlay
        = image_submit_tag("timeline/comment.png")
      .flex-grow
        = f.text_area :content, class: 'comment-submit'
= javascript_pack_tag 'comment'
