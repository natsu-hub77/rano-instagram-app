.container.comment-container#comment-index{data: { post_id: @post.id}}
  %ul
    - @comment.errors.full_messages.each do |message|
      %li= message
  .comment-nav
    =link_to image_tag('back-btn.png'), root_path, class: 'back-btn'
    %p Comment
  .comments-container

  = form_with(model: @comment, url: post_comments_path(@comment.post), local: false) do |f|
    .textarea-wrapper{class: (@post.comments.size < 8 ? 'fixed-bottom' : nil)}
      .image-overlay
        = image_submit_tag("timeline/comment.png", class: "comment-submit-btn")
      .flex-grow
        = f.text_area :content, class: 'comment-submit'
- if !Rails.env.test? || Rails.env.system_test?
  = javascript_pack_tag 'comment'